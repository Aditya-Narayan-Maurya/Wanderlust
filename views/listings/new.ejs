<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New listing </h3>
     <form action="/listings" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="Add a catchy title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Please enter title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" cols="30" rows="6" placeholder="" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter some description</div>
            <div class="valid-feedback">Description Looks good!</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link </label>
            <input type="text" placeholder="Enter the image url/link" name="listing[image]" class="form-control">
        </div>

        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" placeholder="1200" name="listing[price]" class="form-control" required>
                <div class="invalid-feedback">Price should be valid</div>
                <div class="valid-feedback">Price Looks good!</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
                <div class="invalid-feedback">Country should be valid</div>
                <div class="valid-feedback">Country Looks good!</div>
            </div>

        </div>
            <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" placeholder="Jaipur, Rajsthan" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
            <div class="valid-feedback">Location Looks good!</div>
        </div>
        <button class="btn btn-dark mb-3 add-btn mt-3">Add</button>
     </form>
    </div>
</div>
